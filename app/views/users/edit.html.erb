<div id="yui-main">
    <div class="yui-b">
        <h1>Modifier votre profil</h1>
        
        <div class="yui-g">
            <% form_for(@user) do |f| -%>
            <%= f.error_messages %>
                <p>
                    <%= label_tag "Profil" %> : <br/>
                    <%= f.text_area :profil, :class => 'mceEditor', :rows => 10 %>
                </p>
                <p>
                    <%= label_tag "Photo de profil" %> : <br/>
                    <%= f.file_field :avatar %>
                </p>
                
                <p><%= submit_tag "Enregistrer" %></p>
            <%- end -%>
        </div>
    </div>
</div>