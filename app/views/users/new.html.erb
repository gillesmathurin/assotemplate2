<div id="yui-main">
    <div class="yui-b">
        
        <h1>Inscrivez vous</h1>
        
        <div class="yui-g">
            <% @user.password = @user.password_confirmation = nil %>

            <%= error_messages_for :user %>
            <% form_for :user, :url => users_path, :html => {:multipart => true} do |f| -%>
            
            <p>
                <%= f.hidden_field :usertype %>
            </p>

            <p><%= label_tag 'Identifiant' %><br/>
            <%= f.text_field :login %></p>

            <p><%= label_tag 'Email' %><br/>
            <%= f.text_field :email %></p>

            <p><%= label_tag 'Mot de passe' %><br/>
            <%= f.password_field :password %></p>

            <p><%= label_tag 'password_confirmation', 'Confirmer le mot de passe' %><br/>
            <%= f.password_field :password_confirmation %></p>
            
            <p>
                <%= label_tag 'Photo du profil' %><br/><br/>
                <%= f.file_field :avatar %><br/><br/>
            </p>

            <p><%= submit_tag "S'inscrire" %></p>
            <% end -%>
            
        </div>
    </div>
</div>

<div class="yui-b sidebar">
    <div class="yui-g">
        <div class="bloc contact">
            <h2>Contacts</h2>
            <p>
                <%= @association.adresse %><br/>
                <%= @association.cp %><br/>
                <%= @association.ville %><br/>
                Tel : <%= @association.tel %><br/>
                Fax : <%= @association.fax %><br/>
                Email : <%= @association.email %>
            </p>
        </div>
    </div>
</div>
